@model List<Aluno>

@{
    ViewData["Title"] = "Lista de Alunos";
}

<h2>Lista de Alunos</h2>

<p>
    <a asp-action="Cadastrar">Cadastrar Novo Aluno</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Data de Cadastro</th>
            <th>Ativo</th>
            <th>Opções</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aluno in Model)
        {
            <tr>
                <td>@aluno.Id</td>
                <td>@aluno.Nome</td>
                <td>@aluno.Email</td>
                <td>@aluno.DataCadastro.ToString("dd/MM/yyyy HH:mm:ss")</td>
                <td>@(aluno.Ativo ? "Sim" : "Não")</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@aluno.Id">Editar</a> |
                    <a asp-action="Excluir" asp-route-id="@aluno.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
